#cloud-config
# Ubuntu 24.04 LTS Desktop - Autoinstall Configuration
# Cloud-init autoinstall file for unattended installation
# Documentation: https://canonical-subiquity.readthedocs-hosted.com/en/latest/reference/autoinstall-reference.html

autoinstall:
  version: 1

  # Refresh installer to latest version
  refresh-installer:
    update: true
    channel: latest/edge

  # APT configuration
  apt:
    disable_components: []
    fallback: abort
    geoip: true
    mirror-selection:
      primary:
      - country-mirror
      - arches: &id001
        - amd64
        - i386
        uri: http://archive.ubuntu.com/ubuntu/
      - arches: &id002
        - s390x
        - arm64
        - armhf
        - powerpc
        - ppc64el
        - riscv64
        uri: http://ports.ubuntu.com/ubuntu-ports
    preserve_sources_list: false
    security:
    - arches: *id001
      uri: http://security.ubuntu.com/ubuntu/
    - arches: *id002
      uri: http://ports.ubuntu.com/ubuntu-ports

  # Install multimedia codecs
  codecs:
    install: true

  # Automatically install hardware drivers
  drivers:
    install: true

  # Kernel selection (HWE kernel for better hardware support)
  kernel:
    package: linux-generic-hwe-24.04

  # Keyboard layout
  keyboard:
    layout: us
    variant: ''

  # Locale settings
  locale: en_US.UTF-8

  # Network configuration
  network:
    version: 2
    ethernets:
        ens33:
            match:
                name: "en*"
            dhcp4: true
        eth0:
            match:
                name: "eth*"
            dhcp4: true

  # OEM installation
  oem:
    install: auto

  # Installation source (minimal desktop for faster installation)
  source:
    id: ubuntu-desktop-minimal
#    id: ubuntu-desktop  # Uncomment for full desktop installation
    search_drivers: true

  # SSH configuration (optional for desktop)
#  ssh:
#    allow-pw: true
#    authorized-keys: []
#    install-server: true

  # Storage configuration - LVM with auto-sizing
  storage:
    layout:
      name: lvm
      sizing-policy: all

  # System identity
  identity:
    realname: 'Ubuntu Desktop User'
    hostname: ubuntu-desktop
    username: ubuntu
    # Default password: ubuntu (change after first login!)
    # Generated with: openssl passwd -6 -salt xyz ubuntu
    password: '$6$xyz$rjarwc/BNZnhWb1I1E1IcXJ2gZk0V3vXR3Cl2rKj1LjMrFVZC7WfGvvIbJSJJcUcLhDJMz.9fJQgJDuCE/9Fg0'

  # Timezone
  timezone: Europe/Istanbul

  # Update policy
  updates: security

  # Post-installation commands
  late-commands:
    # Update and upgrade packages (commented out for faster installation)
#    - curtin in-target --target /target -- apt update -y
#    - curtin in-target --target /target -- apt upgrade -y
#    - curtin in-target --target /target -- apt-get dist-upgrade -y
#    - curtin in-target --target /target -- apt autoremove -y
    # Set root password (same as ubuntu user)
    - curtin in-target --target=/target -- sudo usermod -p '$6$xyz$rjarwc/BNZnhWb1I1E1IcXJ2gZk0V3vXR3Cl2rKj1LjMrFVZC7WfGvvIbJSJJcUcLhDJMz.9fJQgJDuCE/9Fg0' root
    # Automatic reboot after installation
    - reboot
